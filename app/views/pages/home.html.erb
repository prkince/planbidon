<div id="parcours">
	<div class="cards-prk">
		<% @parcours.each do |parcour| %>
			<%= link_to(parcour_path(parcour)) do %>
				<div class="card-category-prk" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= parcour.photo_url %>)">
					<div id="card-details">
						<%= parcour.titre %>
					</div>
				</div>
			<% end %>

			<%= link_to(parcour_path(parcour)) do %>
				<div class="card-category-prk" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= parcour.photo_url_two %>)">
					<div id="card-details">
						<p>Distance: <%= parcour.distance %> kilometres</p>
						<p>Dur√©e: <%= parcour.duree %></p>
						<p>Denivele: <%= parcour.denivele %></p>
						<p>Type: <%= parcour.difficulte %></p>
					</div>
				</div>
			<% end %>

			<%= link_to(parcour_path(parcour)) do %>
				<div class="card-category-prk" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= parcour.photo_url_three %>)">
					<div id="card-details">
						En voir plus
					</div>
				</div>
			<% end %>
		<% end %>
	</div>
</div>